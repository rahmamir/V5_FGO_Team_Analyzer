<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_formation_main_Layout"
    android:background="@drawable/general_background"
    tools:context=".NewFormation">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Party Name"
        android:background="@drawable/text_background_color"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Small"
        app:layout_constraintStart_toStartOf="@+id/new_formation_main_Layout"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/edt_party_name"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_formation"
            android:layout_width="wrap_content"
            android:layout_height="295dp"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"

            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_party_name">

            <LinearLayout
                android:id="@+id/formation_servant_1"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/servant_1_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/formation_item_background"
                    android:src="@drawable/servant_5" />

                <LinearLayout
                    android:id="@+id/servant1_skills_layout"
                    android:layout_width="164dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/servant1_skill1"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/servant_5_skill1" />

                    <ImageView

                        android:id="@+id/servant1_skill2"
                        android:layout_width="46dp"
                        android:layout_height="28dp"
                        android:src="@drawable/servant_5_skill2" />

                    <ImageView
                        android:id="@+id/servant1_skill3"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:src="@drawable/servant_5_skill3" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/servant1_ce"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/formation_item_background"
                    android:src="@drawable/ce_3" />

                <LinearLayout
                    android:id="@+id/servant1_stats"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@drawable/formation_item_background"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_servant1_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant1_health"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant1_attack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant1_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/formation_servant_2"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/servant_2_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/formation_item_background"
                    android:src="@drawable/servant_3" />

                <LinearLayout
                    android:id="@+id/servant2_skills_layout"
                    android:layout_width="164dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/servant2_skill1"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/servant_3_skill1" />

                    <ImageView
                        android:id="@+id/servant2_skill2"
                        android:layout_width="46dp"
                        android:layout_height="28dp"
                        android:src="@drawable/servant_3_skill1" />

                    <ImageView
                        android:id="@+id/servant2_skill3"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:src="@drawable/servant_3_skill1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/servant2_ce"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:src="@drawable/ce_2" />

                <LinearLayout
                    android:id="@+id/servant2_stats"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_servant2_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant2_health"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant2_attack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant2_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/formation_servant_3"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/servant_3_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/formation_item_background"
                    android:src="@drawable/servant_8" />

                <LinearLayout
                    android:id="@+id/servant3_skills_layout"
                    android:layout_width="164dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/servant3_skill1"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/servant_8_skill1" />

                    <ImageView
                        android:id="@+id/servant3_skill2"
                        android:layout_width="46dp"
                        android:layout_height="28dp"
                        android:src="@drawable/servant_8_skill2" />

                    <ImageView
                        android:id="@+id/servant3_skill3"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:src="@drawable/servant_8_skill3" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/servant3_ce"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:src="@drawable/ce_1" />

                <LinearLayout
                    android:id="@+id/servant3_stats"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/formation_item_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_servant3_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant3_health"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant3_attack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/txt_servant3_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="180dp"
        android:layout_height="315dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_score"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/text_background_color"
            android:textColor="@android:color/white"
            android:text="Score" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/text_background_color"
            android:textColor="@android:color/white"
            android:text="Save Formation" />

        <Button
            android:id="@+id/btn_load"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:background="@drawable/text_background_color"
            android:textColor="@android:color/white"
            android:layout_column="1"
            android:text="Load Formation" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_back"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:background="@drawable/text_background_color"
            android:textColor="@android:color/white"
            android:layout_column="1"
            android:text="Back to Main Menu" />

        <Button
            android:id="@+id/btn_available_cards"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:background="@drawable/text_background_color"
            android:textColor="@android:color/white"
            android:layout_column="1"
            android:text="Available Cards" />

    </GridLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>