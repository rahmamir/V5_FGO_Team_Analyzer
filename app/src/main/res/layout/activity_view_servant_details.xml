<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="485dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/servant_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/servant_1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/general_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/servant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cu Chulainn"
            android:background="@drawable/colors"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/servant_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@drawable/text_background_color"
            android:layout_marginTop="10dp"
            android:text="Level: 90" />


        <TextView
            android:id="@+id/servant_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/text_background_color"
            android:text="Health: 9564.0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/servant_attack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/text_background_color"
            android:text="Attack: 7960.0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/servant_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/text_background_color"
            android:text="Cost: 7"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_choose_servant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/text_background_color"
            android:text="CHOOSE SERVANT"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/servant1_skills_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_background_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/servant_details_skill1"
                android:layout_width="48dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="3"
                android:src="@drawable/servant_5_skill1" />

            <ImageView

                android:id="@+id/servant_details_skill2"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:layout_weight="3"
                android:src="@drawable/servant_5_skill2" />

            <ImageView
                android:id="@+id/servant_details_skill3"
                android:layout_width="48dp"
                android:layout_height="28dp"
                android:layout_weight="3"
                android:src="@drawable/servant_5_skill3" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_back_servant_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/text_background_color"
            android:text="BACK"
            android:textAlignment="center" />


    </LinearLayout>

</LinearLayout>
